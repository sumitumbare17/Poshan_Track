<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ChartActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/monthlyHeightChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"/>

        <!-- Monthly Weight Distribution Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/monthlyWeightChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/monthlyHeightChart"
            android:layout_margin="16dp"/>

        <!-- Yearly Height Trend Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/yearlyHeightChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/monthlyWeightChart"
            android:layout_margin="16dp"/>

        <!-- Yearly Weight Trend Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/yearlyWeightChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/yearlyHeightChart"
            android:layout_margin="16dp"/>

        <!-- Classwise Comparison Bar Chart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/classwiseComparisonChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/yearlyWeightChart"
            android:layout_margin="16dp"/>

    </RelativeLayout>

</ScrollView>
